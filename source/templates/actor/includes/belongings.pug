.belongings-wrapper 
  .add-row
    a(class="add-belonging" title="Add Belonging")
      i.fas.fa-plus
      | {{localize "DIS.Add"}}

  .equipment.item-list 
    .equipment-header
      .equipment-name
        | {{localize "DIS.Equipment"}}
      .equipment-condition 
        | {{localize "DIS.Condition"}}
      .equipment-slots 
        | {{localize "DIS.Slots"}}
      .item-controls 
        | &nbsp;
      
    | {{#each data.system.equipment as |item id|}}
    .equipment-row.item(class="{{item.brokenClass}}" data-item-id="{{item._id}}")
      .equipment-name.item-edit.rollable
        | {{add id 1}}. {{item.name}}
      .equipment-condition 
        | {{#if item.condition.max}}
        a.item-control.item-condition 
          i.fas.fa-dice-six
        input(type="number" min="0" max="{{item.condition.max}}" step="1" class="inline-edit" data-mod="condition.value" name="item.condition.value" value="{{item.condition.value}}" data-dtype="Number")
        |  / {{ item.condition.max}}
        | {{else}}
        | -
        | {{/if}}
      .equipment-slots 
        | {{#if item.equippable}}
        | {{#if item.equipped}}
        | -
        a.item-control.item-equip.equipped(title="Unequip")
          i.fas.fa-shield-alt
        | {{else}}
        | {{item.slots}}
        a.item-control.item-equip.unequipped(title="Equip")
          i.fas.fa-shield-alt
        | {{/if}}
        | {{else}}
        | {{#if item.slots}}
        | {{ item.slots}}
        | {{else}}
        | -
        | {{/if}}
        | {{/if}}
      .item-controls
        a.item-control.item-edit
          i.fas.fa-edit                          
        a.item-control.item-delete
          i.fas.fa-trash  
    | {{/each}}
  .weapons.item-list 
    | {{#each data.system.weapons as |item id|}}
    .weapon-header 
      .weapon-name 
        | {{localize "DIS.Weapon"}} {{add id 1}}
      .weapon-attack 
        | &nbsp;
      .weapon-damage 
        | {{localize "DIS.Damage"}} 
      .weapon-ammo 
        | {{localize "DIS.Ammo"}} 
      .weapon-condition   
        | {{localize "DIS.Condition"}}
      .weapon-slots 
        | {{localize "DIS.Slots"}}
      .item-controls 
        | &nbsp;
    .weapon-row.item(class="{{item.brokenClass}}" data-item-id="{{item._id}}") 
      .weapon-name.item-edit.rollable
        | {{item.name}}
      .weapon-attack.rollable 
        | {{localize "DIS.AttackAbbrev"}}
      .weapon-damage.rollable 
        | {{item.damage}}
      .weapon-ammo 
        | {{#if item.ammo.max}}
        input(type="number" min="0" max="{{ item.ammo.max}}" class="inline-edit" data-mod="ammo.value" name="item.ammo.value" value="{{item.ammo.value}}" data-dtype="Number")
        |  / {{ item.ammo.max}} 
        | {{else}}
        | -
        | {{/if}}
      .weapon-condition
        | {{#if item.condition.max}}
        a.item-control.item-condition 
          i.fas.fa-dice-six
        input(type="number" min="0" max="{{ item.condition.max }}" class="inline-edit" data-mod="condition.value" name="item.condition.value" value="{{item.condition.value}}" data-dtype="Number")
        |  / {{ item.condition.max}}
        | {{else}}
        | -
        | {{/if}}
      .weapon-slots 
        | {{item.slots}}
      .item-controls
        a.item-control.item-edit
          i.fas.fa-edit                          
        a.item-control.item-delete
          i.fas.fa-trash                          
    | {{/each}}
  .armor.item-list 
    | {{#each data.system.armor as |item id|}}
    .armor-header 
        .armor-name 
          | {{localize "DIS.ArmorType"}}
        .armor-protects-against 
          | {{localize "DIS.ProtectsAgainst"}}
        .armor-dr-bonus 
          | {{localize "DIS.DRBonus"}}
        .armor-slots 
          | {{localize "DIS.Slots"}}
        .item-controls 
          | &nbsp;                
    .armor-row.item(data-item-id="{{item._id}}")
      .armor-name.item-edit.rollable 
        | {{item.name}}
      .armor-protects-against 
        | {{item.protectsAgainst}}
      .armor-dr-bonus 
        | {{item.defenseRatingBonus}}
      .armor-slots 
        | {{#if item.equippable}}
        | {{#if item.equipped}}
        | -
        a.item-control.item-equip.equipped(title="Unequip")
          i.fas.fa-shield-alt
        | {{else}}
        | {{item.slots}}
        a.item-control.item-equip.unequipped(title="Equip")
          i.fas.fa-shield-alt
        | {{/if}}
        | {{else}}
        | {{item.slots}}
        | {{/if}}
      .item-controls
        a.item-control.item-edit
          i.fas.fa-edit                          
        a.item-control.item-delete
          i.fas.fa-trash  
    | {{/each}}
  .slots-total
    .slots-total-header
      .slots-text 
        | &nbsp;
      .slots-total 
        | {{localize "DIS.Total"}}
      .item-controls
        | &nbsp;
    .slots-total-row
      .slots-text 
        | &#10071; {{localize "DIS.SlotsHelp"}}
      .slots-total 
        | {{data.system.totalSlots}}/{{data.system.maxSlots}}
      .item-controls
        | &nbsp;
  .holo-row 
    .stat-block.holos 
      label {{localize "DIS.Holos"}}
      input(type="number" class="stat-input" name="system.holos" value="{{data.system.holos}}" data-dtype="Number")
    .stat-block.debt 
      label {{localize "DIS.Debt"}}
      input(type="number" class="stat-input" name="system.debt" value="{{data.system.debt}}" data-dtype="Number")
