form(class="{{cssClass}}")
  header.sheet-header
    .header-row
      .col1
        .item-image 
          img(src="{{data.img}}" data-edit="img" title="{{data.name}}")
      .col2
        .row1
          .game-title
            | DEATH IN SPACE
          .sheet-title
            | WEAPON SHEET
        .row2
          div 
            | NAME 
          div.item-name
            input(class="item-name" name="name" type="text" value="{{item.name}}" placeholder="Item Name" spellcheck="false")

  nav(class="sheet-tabs tabs" data-group="primary")
    a(class="item" data-tab="notes")
      | {{ localize 'DIS.TabNotes' }}
    a(class="item" data-tab="data")
      | {{ localize 'DIS.TabData' }}
  
  section.sheet-body 

    div(class="tab notes-tab" data-group="primary" data-tab="notes")
      .notes-wrapper
        | {{editor content=data.data.notes target="data.notes" button=true owner=owner editable=editable}}

    div(class="tab data-tab" data-group="primary" data-tab="data")
      .data-wrapper
        .form-group 
          label
            | Slots 
          input(type="number" name="data.slots" value="{{data.data.slots}}" placeholder="0" data-dtype="Number")
        .form-group 
          label
            | Cost
          input(type="number" name="data.cost" value="{{data.data.cost}}" placeholder="0" data-dtype="Number")
        .form-spacer
        .form-group 
          label
            | Condition (Current)
          input(type="number" name="data.condition.value" value="{{data.data.condition.value}}" placeholder="0" data-dtype="Number")        
        .form-group 
          label
            | Condition (Max)
          input(type="number" name="data.condition.max" value="{{data.data.condition.max}}" placeholder="0" data-dtype="Number")        
        .form-group 
          label
            | Uses Before Reload (Current)
          input(type="number" name="data.usesBeforeReload.value" value="{{data.data.usesBeforeReload.value}}" placeholder="0" data-dtype="Number")          
        .form-group 
          label
            | Uses Before Reload (Max)
          input(type="number" name="data.usesBeforeReload.max" value="{{data.data.usesBeforeReload.max}}" placeholder="0" data-dtype="Number")          
        .form-group 
          label
            | Damage
          input(type="text" name="data.damage" value="{{data.data.damage}}" placeholder="1d4" data-dtype="String")

