form(class="{{cssClass}}")
  include includes/header.pug
  include includes/tabs.pug
  
  section.sheet-body 
    include includes/notes-tab.pug 

    div(class="tab data-tab" data-group="primary" data-tab="data")
      .data-wrapper
        include includes/slots-and-cost.pug
        .form-group 
          label
            | Protects Against  
          input(type="text" name="system.protectsAgainst" value="{{data.system.protectsAgainst}}" data-dtype="String")
        .form-group 
          label
            | Defense Rating Bonus
          input(type="number" name="system.defenseRatingBonus" value="{{data.system.defenseRatingBonus}}" placeholder="0" data-dtype="Number")
        .form-group 
          label
            | Equippable
          | <input type="checkbox" name="system.equippable" {{checked data.system.equippable}} />